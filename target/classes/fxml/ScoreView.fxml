         </children>
          <padding>
			<Insets bottom="0.0" left="5.0" right="0.0" top="5.0" />
		 </padding>
       </VBox>
       <VBox minHeight="500.0" minWidth="70.0" spacing="20.0">
          <children>
            <Label fx:id="j1"/>
            <TextField fx:id="score1"/>

<BorderPane id="AnchorPane"  prefHeight="160" prefWidth="500" minHeight="-Infinity" minWidth="500" maxHeight="400" maxWidth="600" xmlns:fx="http://javafx.com/fxml" fx:controller="controller.ScoreController">
  <children>
    <HBox spacing="20.0" >
      <children>
        <VBox minHeight="50.0" minWidth="80.0" spacing="20.0" >
          <children>
            <Label alignment="CENTER" contentDisplay="LEFT" text="Joueur"/>

				<toggleGroup>
					<fx:reference source="choice"/>
				</toggleGroup>
			</RadioButton>
			<Button fx:id="ok" mnemonicParsing="false" text="Ok" alignment="CENTER_RIGHT" disable="true"/>
         </children>
          <padding>
			<Insets bottom="0.0" left="0.0" right="0.0" top="5.0" />
		 </padding>
       </VBox>
     </children>
    </HBox>
  </children>
</BorderPane>

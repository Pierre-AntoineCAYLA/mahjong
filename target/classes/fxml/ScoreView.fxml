				<toggleGroup>
					<ToggleGroup fx:id="choice" />
				</toggleGroup>
			</RadioButton>
         </children>
          <padding>
			<Insets bottom="0.0" left="0.0" right="0.0" top="5.0" />
		 </padding>
       </VBox>
       <VBox minHeight="50" minWidth="70.0" spacing="20.0">
          <children>
            <Label fx:id="j2"/>
            <TextField fx:id="score2"/>
        	<RadioButton fx:id="mahjong2" toggleGroup="$choice">
				<toggleGroup>
					<fx:reference source="choice" />
				</toggleGroup>
			</RadioButton>
         </children>
          <padding>
			<Insets bottom="0.0" left="0.0" right="0.0" top="5.0" />
		 </padding>
       </VBox>
       <VBox minHeight="50" minWidth="70" spacing="20.0">
          <children>
            <Label fx:id="j3"/>
            <TextField fx:id="score3"/>
        	<RadioButton fx:id="mahjong3" toggleGroup="$choice">
				<toggleGroup>
					<fx:reference source="choice"/>
				</toggleGroup>
			</RadioButton>
         </children>
          <padding>
			<Insets bottom="0.0" left="0.0" right="0.0" top="5.0" />
		 </padding>
       </VBox>
       <VBox minHeight="50" minWidth="70" spacing="20.0">
          <children>
            <Label fx:id="j4"/>
            <TextField fx:id="score4"/>
